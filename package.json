{
  "name": "slay-loader",
  "version": "1.0.3",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/slay-loader.umd.cjs",
  "module": "./dist/slay-loader.js",
  "types": "./dist/types.d.ts",
  "exports": {
    ".": {
      "import": "./dist/slay-loader.js",
      "require": "./dist/slay-loader.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only && npm run generate:types",
    "generate:types": "vue-tsc --declaration --emitDeclarationOnly --outdir ./dist",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "dependencies": {
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^18.15.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.34.0",
    "eslint-plugin-vue": "^9.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "typescript": "~4.8.4",
    "vite": "^4.1.4",
    "vue-tsc": "^1.2.0",
    "vuepress": "^0.14.11"
  },
  "license": "ISC"
}
